{
  "name": "pulso-ai-frontend",
  "version": "0.1.0",
  "description": "Frontend React para Pulso-AI - Dashboards multi-cliente configurables",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
