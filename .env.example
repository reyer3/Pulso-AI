# üîß Pulso-AI Environment Configuration Template
# Copy this file to .env and adjust values for your environment

# =====================================
# üèóÔ∏è APPLICATION SETTINGS
# =====================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =====================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =====================================
# PostgreSQL Database
DATABASE_URL=postgresql://pulso_user:pulso_dev_password@localhost:5432/pulso_dev

# Alternative format (for different tools)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pulso_dev
POSTGRES_USER=pulso_user
POSTGRES_PASSWORD=pulso_dev_password

# =====================================
# üî¥ REDIS CONFIGURATION
# =====================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =====================================
# üîê SECURITY SETTINGS
# =====================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =====================================
# üåê API CONFIGURATION
# =====================================
API_HOST=localhost
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# =====================================
# üìä MONITORING & LOGGING
# =====================================
SENTRY_DSN=
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# =====================================
# üè¢ CLIENT-SPECIFIC SETTINGS
# =====================================
# Default client for development
DEFAULT_CLIENT_ID=movistar-peru

# =====================================
# üîå EXTERNAL SERVICES
# =====================================
# BigQuery (for Movistar Peru)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# AWS (for future integrations)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# =====================================
# üß™ TESTING CONFIGURATION
# =====================================
# Test Database (used in CI/CD)
TEST_DATABASE_URL=postgresql://pulso_ai:test_password@localhost:5432/pulso_ai_test
TEST_REDIS_URL=redis://localhost:6379/1

# =====================================
# üì± FRONTEND SETTINGS
# =====================================
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000
VITE_GRAPHQL_URL=http://localhost:8000/graphql

# =====================================
# üê≥ DOCKER SETTINGS
# =====================================
COMPOSE_PROJECT_NAME=pulso-ai
COMPOSE_FILE=docker-compose.yml
